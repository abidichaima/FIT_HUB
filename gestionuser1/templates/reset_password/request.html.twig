{% extends 'baseFront.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <center>
<div style="margin-top:10px; padding:20px; width:800px; height:fit-content; 
       border-radius:10px; background-size: 100% ; box-shadow: -1px -1px 34px 3px rgba(0,0,0,0.63);
-webkit-box-shadow: -1px -1px 34px 3px rgba(0,0,0,0.63);-moz-box-shadow: -1px -1px 34px 3px rgba(0,0,0,0.63);" class="container">

<label style="black;  font-weight: bold; font-size: 20px;"  >Reset your password</label> 


   

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
              
            </small>
        </div>

        <button class="btn btn-primary" style="background-color:#FAC031; border:none">Send password reset email</button>
        </center>
    {{ form_end(requestForm) }}
{% endblock %}
