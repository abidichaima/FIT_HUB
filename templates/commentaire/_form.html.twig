{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
 <div class="form.group">
    {{ form_label(form.nickname,"nickname") }}
     {{ form_widget(form.nickname,{'attr':{'class':'form-control'}}) }}
     {% if form_errors(form.nickname)is not empty %}
    
    <div class="alert alert-danger">
    {{ form_errors(form) }}
  </div>
  {% endif %}
  </div>
  <div class="form.group">
    {{ form_label(form.email_c,"votre email ") }}
     {{ form_widget(form.email_c,{'attr':{'class':'form-control'}}) }}
     {% if form_errors(form.email_c)is not empty  %}
    
    <div class="alert alert-danger">
    {{ form_errors(form) }}
  </div>
  {% endif %}
  </div>
   <div class="form.group">
    {{ form_label(form.descriptionCommentaire,"contenu du commentaire") }}
     {{ form_widget(form.descriptionCommentaire,{'attr':{'class':'form-control'}}) }}
     {% if form_errors(form.descriptionCommentaire)is not empty and form.descriptionCommentaire.vars.value|length >= 2 and form.descriptionCommentaire.vars.value|length <= 100 %}
    
    <div class="alert alert-danger">
    {{ form_errors(form) }}
  </div>
  {% endif %}
  </div>
  <div class="form.group">
    {{ form_label(form.article,"article") }}
     {{ form_widget(form.article,{'attr':{'class':'form-control'}}) }}
    {% if  form_errors(form.article) is not empty %}
    <div class="alert alert-danger">
    {{ form_errors(form) }}
  </div>
   {% endif %}
   </div>
  <div class="form.group">
   
    {{ form_widget(form) }}
    
   </div>
    
      <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}


    