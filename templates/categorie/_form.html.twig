{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div class="form.group">
    {{ form_label(form.nomCategorie,"Nom du categorie") }}
     {{ form_widget(form.nomCategorie,{'attr':{'class':'form-control'}}) }}
    {% if  form_errors(form.nomCategorie) is not empty %}
    <div class="alert alert-danger">
    {{ form_errors(form) }}
  </div>
  {% endif %}
  </div>
  <div class="form.group">
    {{ form_label(form.descriptionCategory,"description du categorie") }}
     {{ form_widget(form.descriptionCategory,{'attr':{'class':'form-control'}}) }}
     {% if form_errors(form.descriptionCategory) is not empty and form.descriptionCategory.vars.value|length < 5  and form.descriptionCategory.vars.value|length >100 %}
   
    <div class="alert alert-danger">
    {{ form_errors(form) }}
  </div>
  {% endif %}
  </div>
    
   <div class="form.group">
   
    {{ form_widget(form) }}
    
   </div>
  <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

