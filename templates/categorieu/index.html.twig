{% extends 'baseFront.html.twig' %}

{% block title %}

    Categorie
{% endblock %}



{% block body %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+hN0WZSvuoSfnapfjV/HzAvcK5tXvLXoO5t1+d" crossorigin="anonymous">
    <style>
        body {
           
        }
        h1 {
            font-size: 3rem;
            text-align: center;
            margin-top: 3rem;
            margin-bottom: 2rem;
        }
        h2 {
            font-size: 2rem;
            text-align: center;
            margin-bottom: 3rem;
        }
        .card {
            background-color: #FFDAB9	;
            color: #fff;
        }
        .card-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
        .card-text {
            margin-bottom: 1.5rem;
        }
        .btn-primary {
            background-color: #ffa500;
            border-color: #ffa500;
        }
        .btn-primary:hover {
            background-color: #ff8c00;
            border-color: #ff8c00;
        }
        .btn-primary:focus {
            box-shadow: 0 0 0 0.2rem rgba(255,165,0,0.5);
        }
        
    </style>

    <div class="container my-5">
        <h1>Les catégories disponibles</h1>
        <h2 class="my-4"></h2>

        <div class="row">
            {% for categorie in categories %}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ categorie.nomCategorie }}</h5>
                            <p class="card-text">{{ categorie.descriptionCategory }}</p>
                            <a href="{{ path('app_categorieu_show', {'id': categorie.id}) }}" class="material-icons">list</a>

                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune catégorie disponible</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
