{% extends "baseBack.html.twig" %}

{% block body %}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Abonnements</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NomAbonnement</th>
                            <th>DateDebut</th>
                            <th>DateFin</th>
                            <th>EtatAbonnement</th>
                            <th>TypeAbonnement</th>
                            <th>pack</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for abonnement in abonnements %}
                        <tr>
                            <td>{{ abonnement.id }}</td>
                            <td>{{ abonnement.nomAbonnement }}</td>
                            <td>{{ abonnement.dateDebut ? abonnement.dateDebut|date('Y-m-d') : '' }}</td>
                            <td>{{ abonnement.dateFin ? abonnement.dateFin|date('Y-m-d') : '' }}</td>
                            <td>{{ abonnement.etatAbonnement }}</td>
                            <td>{{ abonnement.typeAbonnement }}</td>
                            <td>{{ abonnement.pack }}</td>
                            <td>
                                <button class="btn btn-primary mr-2"><a href="{{ path('app_abonnement_show', {'id': abonnement.id}) }}">Show</a></button>
                                <button class="btn btn-primary mr-2"><a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}">Edit</a></button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">No Abonnement found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <br>
                <div align="center">
                    <button class="btn btn-primary mr-2"><a href="{{ path('app_abonnement_new') }}">Create New</a></button>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}