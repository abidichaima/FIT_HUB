{% extends 'baseBack.html.twig' %}

{% block title %}
New Article
{% endblock %}
{% block body %}
  

    <h1>Article index</h1>
    <style>
  .table {
    overflow-x: auto;
  }

  th, td {
    text-align: center;
  }
</style>


    <table class="table" align="center" >
        <thead>
            <tr>
                <th>Id</th>
                <th>TitreArticle</th>
                <th>DescriptionArticle</th>
                <th>DateArticle</th>
                <th>ImageArticle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titreArticle }}</td>
                <td>{{ article.descriptionArticle| replace({";":"<br/>"})| raw }}</td>
                <td>{{ article.dateArticle ? article.dateArticle|date('Y-m-d') : '' }}</td>
                <td>{{ article.imageArticle }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    
     </table>
  

    <a href="{{ path('app_article_new') }}">Create new</a>
{% endblock %}
