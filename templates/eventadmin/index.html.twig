{% extends 'baseBack.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}

    <h1>Event List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Description</th>
                <th>Location</th>
                <th>Type</th>
                <th>Date</th>
                <th>Actions</th>
                <th>Add Ticket</th>

            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.nomEvent }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.location }}</td>
                    <td>{{ event.type }}</td>
                    <td>{{ event.date|date('Y-m-d H:i:s') }}</td>
                    <td>
                        <a href="{{ path('app_event_admin_new', {id: event.id}) }}" class="btn btn-primary">Add</a>

                        <a href="{{ path('event_edit', {id: event.id}) }}" class="btn btn-primary">Edit</a>
                        <form action="{{ path('event_delete', {id: event.id}) }}" method="post" style="display: inline-block">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this event?')">Delete</button>
                        </form>
                    </td>
                      <td>
                        <a href="{{ path('event_ticket_new', {id: event.id}) }}" class="btn btn-success">Add Ticket</a>

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
