{% block body %}
 <h1 style="color: grey;">Add a New Ticket</h1>

       {{form_start(form,{'attr':{'novalidate':'novalidate'}} )}}
    <div class="form-group">
      {{ form_label(form.disponibilite, 'Disponibilit√©', {'label_attr': {'class': 'form-control-label'}}) }}
