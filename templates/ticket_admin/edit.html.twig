{% extends 'baseBack.html.twig' %}

{% block body %}
    <h1>Edit Ticket</h1>

{{ form_start(form,{'attr':{'novalidate':'novalidate'}} )}}
        {{ form_row(form.nombreMax) }}
        {% if form_errors(form.nombreMax) %}
            <div class="alert alert-danger">{{ form_errors(form.nombreMax) }}</div>
        {% endif %}
        {{ form_row(form.disponibilite) }}
